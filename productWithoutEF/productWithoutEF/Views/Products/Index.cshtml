@model System.Data.DataTable


@{
    ViewData["Title"] = "Index";
}

    <table class="table table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Color</th>
            <th>Price</th>
            <th>Availalabe Quantity</th>
            <th>Date</th>
            <th></th>
        </tr>

        @for(int i=0; i<Model.Rows.Count;i++)
        {
            <tr>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>@Model.Rows[i][4]</td>
                <td>@Model.Rows[i][5]</td>
                <td>@Model.Rows[i][6]</td>
                <td>


                    <a href="@Url.Action("create", "Products")">ADD</a>
                    <a href="@Url.Action("Edit","Products",new {@id=Model.Rows[i][0] })">Edit</a>
                    <a href="@Url.Action("DELETE","Products",new {@id=Model.Rows[i][0] })">DELETE</a>


                </td>
                
            </tr>
        }
    </table>
